{
  "name": "pixel-board-websocket-server",
  "version": "1.0.0",
  "description": "WebSocket server for collaborative pixel board",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile ./dist/pixelwebsocket ./src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "latest"
  }
}